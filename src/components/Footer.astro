---
import Logo from "../assets/logo.svg";
import {
    NAVIGATION_LINKS,
    DISCORD_INVITE_URL,
    YOUTUBE_URL,
    TWITTER_URL,
    INSTAGRAM_URL,
} from "../consts.ts";
---

<footer
    class="flex flex-col justify-between bg-(--bg-2) p-16 text-(--text-1) w-screen left-0 absolute"
>
    <div class="max-w-[1980px] mx-auto w-full">
        <section class="mb-6 border-b border-(--border) pb-16 text-(--logo)">
            <a href="/"><Logo width="58px" height="58px" /></a>
        </section>
        <section
            class="mb-4 flex justify-between font-[Bebas_Neue] font-normal text-2xl"
        >
            <span>Enlaces</span>
            <span>Redes Sociales</span>
        </section>
        <section class="flex justify-between text-lg">
            <ul class="flex flex-row gap-9">
                {
                    NAVIGATION_LINKS.map((item) => (
                        <li>
                            <a href={item.href}>{item.name}</a>
                        </li>
                    ))
                }
            </ul>
            <ul class="flex flex-row gap-9">
                <li><a href={INSTAGRAM_URL}>Instagram</a></li>
                <li><a href={YOUTUBE_URL}>Youtube</a></li>
                <li><a href={TWITTER_URL}>X</a></li>
                <li><a href={DISCORD_INVITE_URL}>Discord</a></li>
            </ul>
        </section>
    </div>
</footer>
